<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainVbox" alignment="TOP_CENTER" minWidth="450.0" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.deveone.censumcubiles.material_arrival_dialog.MaterialArrivalController">
   <children>
      <VBox maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <content>
                  <TableView fx:id="table" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <columns>
                      <TableColumn fx:id="categoryCol" prefWidth="89.0" text="Категория" visible="false" />
                      <TableColumn fx:id="nameCol" prefWidth="182.0" text="Название" />
                        <TableColumn fx:id="amountCol" prefWidth="89.0" text="Количество" />
                        <TableColumn maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="91.0" text="Стоимость">
                           <columns>
                              <TableColumn fx:id="oneCostCol" minWidth="-Infinity" prefWidth="90.0" text="За единицу" />
                              <TableColumn fx:id="totalCostCol" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="90.0" text="Сумма" />
                           </columns>
                        </TableColumn>
                    </columns>
                  </TableView>
               </content>
            </ScrollPane>
            <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="addRowButton" alignment="CENTER" mnemonicParsing="false" text="+ Добавить строку">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="delRowButton" alignment="CENTER" mnemonicParsing="false" text="- Удалить строку">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Separator orientation="VERTICAL" />
                  <Label text="Сумма">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="sumField" alignment="CENTER_RIGHT" editable="false" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="5.0">
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
         <children>
            <Button fx:id="applyButton" mnemonicParsing="false" text="Внести" />
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Отменить" />
         </children>
      </HBox>
   </children>
</VBox>
